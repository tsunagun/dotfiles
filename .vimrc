set nocompatible
filetype indent plugin on
syntax on
set nonumber
set laststatus=2
set autoindent
set tabstop=2 shiftwidth=2 softtabstop=0
set expandtab
set hlsearch
set ignorecase
set incsearch
set wrapscan
set ruler
set showmode
set title
set showcmd
set smarttab
set smartindent
set vb t_vb=
set noerrorbells
set noimdisable
set noimcmdline
set backspace=indent,eol,start
set ttyfast
set whichwrap=b,s,h,l,<,>,[,]
